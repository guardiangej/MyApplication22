<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Toggle Buttons -->
    <LinearLayout
        android:id="@+id/llToggleButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textViewTitle"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnDay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Day"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnMonth"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Month"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnYear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Year"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Chart -->
    <!-- You will need to implement a Chart View or use a library for this part -->

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/llToggleButtons"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/llToggleButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Spending Section -->
    <LinearLayout
        android:id="@+id/llTopSpending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llToggleButtons"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textViewTopSpending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Top Spending"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

<!--        <ImageView-->
<!--            android:id="@+id/imageViewSwap"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/baseline_filter_list_24"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            app:tint="@android:color/darker_gray" />-->

    </LinearLayout>

    <!-- RecyclerView for the List Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTopSpending"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnWeek"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:text="Week"
        android:textColor="@color/black" />

</RelativeLayout>
